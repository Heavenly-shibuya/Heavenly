<div class="clearfix">
  <div class="main-content">
    <div class="item-title">
      <h3><strong>Edit Item</strong></h3>
    </div>
    <!-- form部分だけ追記 -->
    <%= form_for(@item) do |f| %>
    <div class="new-item-side">
      <div class="field">
        <%= f.attachment_field :item_image%>
      </div>
      <div class="field">
        <%= f.label :price, "price" %><br>
        <%= f.text_field :price %>
      </div>
      <div class="field">
        <%= f.label :label, "label" %><br>
        <%= f.text_field :label %>
      </div>
      <div class="field">
        <%= f.label :genre_id, "genre" %><br>
        <%= select :genre_id,:genre,Item.genre_ids.keys.to_a %>
      </div>
      <div class="field">
        <%= f.label :artist_id, "artist" %><br>
        <%= f.collection_select :artist_id, Artist.all, :id, :name %>
      </div>
      <div class="field">
        <%= f.label :stock, "stock" %><br>
        <%= f.text_field :stock %>
      </div>
    </div>

    <div class="new-item-right ">
      <div class="field">
        <%= f.label :title, "title" %><br>
        <%= f.text_field :title %>
      </div>

        <h3>Songs</h3>
        <div id="discs">
          <%= f.fields_for :discs do |disc| %>
          <%= render 'disc_fields', f: disc %>
          <% end %>
          <div id="links">
            <%= link_to_add_association 'add disc',f, :discs, class: "btn btn-primary" %>
        <%= f.submit "Update", class: "btn btn-warning" %>
        <%= link_to "商品一覧へ", admin_items_path, class:"btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>

