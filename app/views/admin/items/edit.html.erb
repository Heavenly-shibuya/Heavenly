<div class="clearfix">
  <div class="sidebar">
    <div class="user-content">
      <div class="user-image">
      </div>
      <div class="user-profile">
        <a class="my-side" href="#" style="text-decoration: none;">MY PROFILE</a>
        <a class="my-side" href="#" style="text-decoration: none;">CART</a>
        <a class="my-side" href="#" style="text-decoration: none;">MESSAGE</a>
        <a class="my-side" href="#" style="text-decoration: none;">LOGOUT</a>
      </div>
    </div>
  </div>
  <div class="main-content">
    <div class="item-title">
      <h3><strong>Edit Item</strong></h3>
    </div>
    <!-- form部分だけ追記 -->
    <%= form_for(@item) do |f| %>
    <div class="new-item-side">
      <div class="field">
        <%= f.attachment_field :item_image%>
      </div>
      <div class="field">
        <%= f.label :price, "price" %><br>
        <%= f.text_field :price %>
      </div>
      <div class="field">
        <%= f.label :label, "label" %><br>
        <%= f.text_field :label %>
      </div>
      <div class="field">
        <%= f.label :genre_id, "genre" %><br>
        <%= select :genre_id,:genre,Item.genre_ids.keys.to_a %>
        <!--   <%= select :genre_id,:genre,Item.genre_ids.values.to_a %> -->
      </div>
      <div class="field">
        <%= f.label :artist_id, "artist" %><br>
        <%= f.collection_select :artist_id, Artist.all, :id, :name %>
      </div>
      <div class="field">
        <%= f.label :stock, "stock" %><br>
        <%= f.text_field :stock %>
      </div>
    </div>

    <div class="new-item-right ">
      <div class="field">
        <%= f.label :title, "title" %><br>
        <%= f.text_field :title %>
      </div>

      <h3>Songs</h3>
      <div id="discs">
        <%= f.fields_for :discs do |disc| %>
        <%= render 'disc_fields', f: disc %>
        <% end %>
        <div id="links">
          <%= link_to_add_association 'add disc',f, :discs, class: "btn btn-primary" %><br>
        </div>

        <%= f.submit "Update", class: "btn btn-warning" %>
        <%= link_to "delete ", admin_item_path(@item), method: :delete, "data-confirm " => "Are you sure? ", class:"btn btn-danger " %>
      </div>
      <% end %>
    </div>
  </div>