<%= form_for @item do |f| %>

<a class="btn btn-default btn-block artist-upimage" href="#">イメージを選択</a>

  <div class="field">
    <%= f.label :price, "price" %>
    <%= f.text_field :price %>
  </div>
    <div class="field">
    <%= f.label :label, "label" %>
    <%= f.text_field :label %>
  </div>
    <div class="field">
    <%= f.label :genre_id, "genre" %>
    <%= f.number_field :genre_id %>
  </div>
</div>
<div class="col-xs-6 col-xs-offset-1">
    <div class="field">
    <%= f.label :title, "title" %>
    <%= f.text_field :title %>
  </div>
  <h3>Tasks</h3>
  <div id="discs">
    <%= f.fields_for :discs do |disc| %>
      <%= render 'disc_fields', f: disc %>
    <% end %>
    <div id="links">

      <%= link_to_add_association 'add disc',f, :discs %>
    </div>
    <%= f.submit %>
  </div>
<% end %>
</div>
