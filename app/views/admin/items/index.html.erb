<div class="news-index">
  <div class="clearfix">
    <div class="sidebar">
      <div class="user-content">
        <div class="user-image">
        </div>
        <div class="user-profile">
          <a class="my-side" href="#" style="text-decoration: none;">MY PROFILE</a>
          <a class="my-side" href="#" style="text-decoration: none;">CART</a>
          <a class="my-side" href="#" style="text-decoration: none;">MESSAGE</a>
          <a class="my-side" href="#" style="text-decoration: none;">LOGOUT</a>
        </div>
      </div>
    </div>
    <!-- main -->
    <div class="container-fluid">
      <div class="row">
        <div class="index-main-content">
         <div class="order-item-title"><h3><strong>商品一覧</strong></h3></div>
          <div class="item-index-content clearfix">

            <% @item.each do |f| %>

            <div class="index-content col-sm-12 col-md-12">
              <div class="index-item-pic col-sm-3 col-md-3">
                <%= attachment_image_tag f, :item_image, :fill, 150, 150, format: 'jpg' %>
              </div>



                <div class="index-item-date col-sm-9 col-md-9">

                  <table class="index-item-table" style="table-layout:fixed;width:100%;" >
                          <tr>
                            <th style="width:30%;">商品名</th>
                            <th style="width:30%;">アーティスト名</th>
                            <th style="width:10%;"></th>
                            <th style="width:15%;">在庫数</th>
                            <th style="width:10%;"></th>
                            <th style="width:10%;"></th>
                          </tr>
                          <tr>
                            <td><%= f.title %></td>
                            <td><%= f.artist.name %></td>
                            <td></td>
                            <td><%= f.stock %></td>
                            <td><%= link_to "編集", edit_admin_item_path(f.id), class: "btn btn-success edit-btn" %></td>
                            <td></td>
                          </tr>
                    </table>
                </div>
              </div>

            <% end %>



        </div>
            <div class="pagenation-index">
             <%= paginate @item, class: "pagenate" %>
            </div>
      </div>
    </div>
  </div>
</div>
