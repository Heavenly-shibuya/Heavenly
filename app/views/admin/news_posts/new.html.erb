</div>
<!-- main -->
<div class="container-fluid">
  <div class="row">
    <div class="news-new-main">
      <div class="news-new-content">
        <div class="contents-bg">
          <div class="news-new-list">
            <div class="title"><h3><strong>NEWS 投稿</strong></h3></div>
            <!-- form_for -->
            <%= form_for(@news , url:admin_news_posts_path) do |f| %>
            <div style="margin: 20px 0;">
              <label>News Image</label>
              <%= f.attachment_field :news_image %>
            </div>
            <div style="margin: 20px 0;">
              <label>Title</label>
              <%= f.text_field :title, class:"form-control", :placeholder => "タイトルを入力" %>
            </div>
            <div  style="margin: 20px 0;">
              <label>Caption</label>
              <%= f.text_area :body, class:"form-control", :placeholder => "本文を入力" %>
            </div>
            <div style="margin: 20px 0;">
              <%= f.submit '投稿', class:"btn btn-default btn-block" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>