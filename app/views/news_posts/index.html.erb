<!-- main -->
<div class="container-fluid">
  <div class="row">
    <div class="news-main">
      <div class="title"><h3><strong>NEWS</strong></h3></div>
      <% @newsall.each do |news| %>
      <div class="news-content clearfix">
        <div class="row">
          <div class="image-box col-xs-12 col-sm-offset-1 col-sm-3">
          <%= link_to attachment_image_tag news, :news_image, :fill, 150, 150 %>
        </div>
          <div class="news-caption col-xs-12 col-sm-7">
            <strong>Title:<%= news.title %></strong>
            <div style="margin-top: 20px;">
            <%= news.body %>
            <%= link_to "記事詳細へ", admin_news_post_path(news.id) %>
          </div>
          </div>
          <% end %>
        </div>
      </div>
      <nav>
        <ul class="pagination">
          <li>
            <a href="#" aria-label="前のページへ">
              <span aria-hidden="true">«</span>
            </a>
          </li>
          <li><a href="#">1</a></li>
          <li class="active"><a href="#">2</a></li>
          <li><a href="#">3</a></li>
