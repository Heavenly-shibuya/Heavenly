<div class="signup-container">

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :ユーザー名 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "email", placeholder: "英数字のみ12文字以内", class: "col-xs-12" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "xxx@xxx.com",class: "col-xs-12" %>
    </div>

    <div class="field">
      <%= f.label :姓 %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "email", placeholder: "東京", class: "col-xs-12" %>
    </div>

    <div class="field">
      <%= f.label :姓（フリガナ） %><br />
      <%= f.text_field :last_name_furi, autofocus: true, autocomplete: "email", placeholder: "トウキョウ", class: "col-xs-12" %>
    </div>

    <div class="field">
      <%= f.label :名 %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "email", placeholder: "太郎", class: "col-xs-12" %>
    </div>

    <div class="field">
      <%= f.label :名（フリガナ） %><br />
      <%= f.text_field :first_name_furi, autofocus: true, autocomplete: "email", placeholder: "タロウ", class: "col-xs-12" %>
    </div>

    <div class="field">
      <%= f.label :郵便番号 %><br />
      <%= f.text_field :zip, autofocus: true, autocomplete: "email", placeholder: "123-1234", class: "col-xs-12" %>
    </div>

    <div class="field">
      <%= f.label :住所（物件名まで） %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "email", placeholder: "東京都渋谷区〇〇1-2-3", class: "col-xs-12" %>
    </div>

    <div class="field">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :tel, autofocus: true, autocomplete: "email", placeholder: "03-1234-5678", class: "col-xs-12" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "col-xs-12" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-xs-12" %>
    </div>

    <div class="button">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  </div>
</div>
</div>
<% end %>

