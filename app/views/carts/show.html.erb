
<div class="content clearfix">
   <div class="main-content">
    <% if notice %>
    <div class="flash">
      <p id="notice"><%= notice %></p>
    </div>
    <% end %>

    <div class="cart-item-title"><h3><strong>カート一覧</strong></h3></div>
      <div class="containar-fluid">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <div class="carts-table">
            <table class="table">
              <thead>
                <th></th>
                <th>商品名</th>
                <th>価格</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
              </thead>
              <tbody>
                <% @cart.cart_items.each do |item| %>
                <tr>
                  <td>
                    <%= attachment_image_tag item.item, :item_image ,class:"img-responsive" %>
                  </td>
                  <td class="link-color"><%= link_to "#{item.item.title}", item_path(item.item.id) %></td>
                  <td><%= (item.item.price).to_i %>円</td>
                  <td>数量：<%= item.quantity %>個</td>
                  <td><%= (item.total_price).to_i %>円</td>
                    <td>
                      <%= link_to '削除', item_carts_item_path(item.item,item), method: :delete, data: {confirm: 'カートから削除してよろしいですか？'}, class: "btn btn-danger"%>
                  </td>
                </tr>
              </tbody>
              <% end %>
            </table>
          </div>
            <div class="col-xs-3 col-xs-offset-5">
              <div class="goukei"><span>合計&nbsp;&nbsp;&nbsp;<%= (@cart.total_price).to_i %>円</span></div>
            </div>
            <br>
            <br>
            <br>
            <div class="col-xs-4 col-xs-offset-4">
          <%= link_to 'お支払方法へ', new_order_path, class:"btn btn-success btn-lg btn-block" %>
          </div>
            </div>
          </div>
        </div>
      </div>
    </div>



        </div>
      </div>
    </div>
</body>
