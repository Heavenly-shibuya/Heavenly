<body>
    <div class="clearfix">
     <div class="content clearfix">
       <div class="sidebar">
        <div class="user-content">
          <div class="user-image">
          </div>
          <div class="user-profile">
              <a class="my-side" href="#" style="text-decoration: none;">MY PROFILE</a>
              <a class="my-side" href="#" style="text-decoration: none;">CART</a>
              <a class="my-side" href="#" style="text-decoration: none;">MESSAGE</a>
              <a class="my-side" href="#" style="text-decoration: none;">LOGOUT</a>
          </div>
        </div>
       </div>
       <div class="main-content">
          <div class="search-artist-contant">
            <% if @artists.present? %>
              <div class="title">
                <h3><strong>Artist</strong></h3>
              </div>
            <% end %>

              <div class="item-content">

                <% if @artists.present? %>
                  <% @artists.each do |artist| %>
                    <div class="search-artist-item">
                      <%= link_to artist_path(artist.id) do %>
                      <%= attachment_image_tag artist, :artist_image, :fill, 300, 300, format: 'jpg', class: "img-circle artist-profile--index-pic" %>
                      <% end %>
                      <div class="artist-text">
                        <div class="artist-name"><p><%= artist.name %></p></div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
          </div>

          <div class="search-item-contant">
            <% if @items.present? %>
              <div class="title">
                <h3><strong>Item</strong></h3>
              </div>
            <% end %>


              <div class="item-content">
                <% if @items.present? %>
                  <% @items.each do |item| %>

                  <div class="search-artist-item">
                    <%= link_to item_path(item.id) do %>
                      <%= attachment_image_tag item, :item_image, :fill, 300, 300, format: 'jpg', class: "artist-profile--index-pic" %>
                    <% end %>
                    <div class="artist-text">
                      <div class="artist-name"><p><%= item.title %></p></div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>

          <% unless @items.present? or @artists.present? %>
          <div class="serch-nil">
            <img src="/icon_150052_256.png"><br>
            <h1>「<%= params[:search] %>」</h1>
            <h1>に該当する検索結果はありません</h1>
          </div>
          <% end %>


       </div>
     </div>
   </div>
</body>