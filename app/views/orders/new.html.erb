
<div class="content clearfix">
   <div class="sidebar">
    <div class="user-content">
      <div class="user-image">
      </div>
      <div class="user-profile">
        <a class="my-side" href="#" style="text-decoration: none;">MY PROFILE</a>
        <a class="my-side" href="#" style="text-decoration: none;">CART</a>
        <a class="my-side" href="#" style="text-decoration: none;">MESSAGE</a>
        <a class="my-side" href="#" style="text-decoration: none;">LOGOUT</a>
      </div>
    </div>
  </div>
  <div class="main-content">
    <% if notice %>
    <p id="notice"><%= notice %></p>
    <% end %>

        <div class="order-title"><h3><strong>お支払方法</strong></h3></div>
          <div class="containar-fluid">
            <div class="row">
              <div class="order-title"><h4><strong>カートに入っている商品</strong></h4></div>
              <div class="col-xs-10 col-xs-offset-1">
                <div class="order-table">
                  <table class="table">
                    <thead>
                      <th></th>
                      <th>商品名</th>
                      <th>価格</th>
                      <th>数量</th>
                      <th>小計</th>
                    </thead>
                    <tbody>
                      <% @cart.cart_items.each do |item| %>
                      <tr>
                        <td>
                          <%= attachment_image_tag item.item, :item_image ,class:"img-responsive" %>
                        </td>
                        <td><%= item.item.title %></td>
                        <td><%= (item.item.price).to_i %>円</td>
                        <td>数量：<%= item.quantity %>個</td>
                        <td><%= (item.total_price).to_i %>円</td>
                      </tr>
                    </tbody>
                    <% end %>
                  </table>
                </div>
                <div class="col-xs-3 col-xs-offset-6">
                  <div class="goukei"><span>合計&nbsp;&nbsp;&nbsp;<%= (@cart.total_price).to_i %>円</span></div>
                </div>
                <div class="col-xs-3 ">
                  <%= link_to 'カートへ', @cart, class:"btn btn-default btn-block" %>
                </div>
              </div>
            </div>
            <!-- 配送方法 -->
              <div class="row">
                <div class="order-title"><h4><strong>配送方法</strong></h4></div>
                <div class="col-xs-10 col-xs-offset-1">
                </div>
                <div class="row">
                <div class="order-title"><h4><strong>支払い方法</strong></h4></div>
                <div class="col-xs-10 col-xs-offset-1">
                </div>
                  <div class="col-xs-4 col-xs-offset-4 ">
                    <%= link_to '購入確認画面へ', new_order_path, class:"btn btn-warning btn-lg btn-block" %>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>