
<div class="clearfix">
   <div class="sidebar">
    <div class="user-content">
      <div class="user-image">
      </div>
      <div class="user-profile">
        <a class="my-side" href="#" style="text-decoration: none;">MY PROFILE</a>
        <a class="my-side" href="#" style="text-decoration: none;">CART</a>
        <a class="my-side" href="#" style="text-decoration: none;">MESSAGE</a>
        <a class="my-side" href="#" style="text-decoration: none;">LOGOUT</a>
      </div>
    </div>
  </div>
        <div class="order-main-content">
          <div class="containar-fluid">
            <div class="row">
            <% if notice %>
            <p id="notice"><%= notice %></p>
            <% end %>

              <div class="order-title"><h3><strong>購入確認</strong></h3></div>

                    <div class="order-title"><h4><strong>カートに入っている商品</strong></h4></div>
                    <div class="col-xs-12">
                      <div class="order-table">
                        <table class="table">
                          <thead>
                            <th></th>
                            <th>商品名</th>
                            <th>価格</th>
                            <th>数量</th>
                            <th>小計</th>
                          </thead>
                          <tbody>
                            <% @cart.cart_items.each do |item| %>
                            <tr>
                              <td>
                                <%= attachment_image_tag item.item, :item_image ,class:"img-responsive" %>
                              </td>
                              <td><%= item.item.title %></td>
                              <td><%= (item.item.price).to_i %>円</td>
                              <td>数量：<%= item.quantity %>個</td>
                              <td><%= (item.total_price).to_i %>円</td>
                            </tr>
                          </tbody>
                          <% end %>
                        </table>
                      </div>
                      <div class="col-xs-3 col-xs-offset-7">
                        <div class="goukei"><span>合計&nbsp;&nbsp;&nbsp;<%= (@cart.total_price).to_i %>円</span></div>
                      </div>
                      <div class="col-xs-2 ">
                        <%= link_to 'カートへ', @cart, class:"btn btn-default btn-block" %>
                      </div>
                    </div>
                  </div>

                  <div class="order-title"><h4><strong>配送先情報</strong></h4></div>

                  <%= render 'form', order: @order %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>