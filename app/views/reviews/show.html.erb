<body>
 <div class="content clearfix">
   <div class="main-content">
    <div class="review-title"><h3><strong>Review <%= link_to "商品情報へ", item_path(@item), class: "btn btn-info user-btn" %></strong></h3></div>
    <div class="containar">
      <div class="row">
        <% @item.reviews.reverse_order.each do |review| %>
        <div class="col-xs-10 col-xs-offset-1 review">
          <div class="col-xs-3">
            <%= attachment_image_tag review.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle", fallback: "user1.png", :size => "100x100" %>
          </div>
          <div class="col-xs-7">
            <div class="review-comment"><%= review.body %></div>
          </div>
          <div class="col-xs-2">
            <div class="review-comment"><%= review.created_at.strftime('%Y/%m/%d') %></div>
          </div>
        </div>
        <% end %>

        </div>
      </div>
    </div>
  </div>
</body>




